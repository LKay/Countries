{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["ES5", "DOM"],
    "module": "ES2015",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "plugins": [
      {
        "name": "typescript-eslint-language-service"
      }
    ],
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES5",
    "typeRoots": [
      "src/types",
      "./node_modules/@types"
    ]
  },
  "exclude": ["**.test.*"],
  "include": ["./src/*.ts", "./data/*.json"]
}
